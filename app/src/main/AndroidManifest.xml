<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.friesepoort.rocdrone">

    <!-- premissons for camara and harddisk space -->
    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
         android:allowBackup="true"
        android:icon="@drawable/favicon"
        android:label="ROC Drone&apos;s"
        android:roundIcon="@drawable/favicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home"
            android:label="@string/title_activity_home"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".test" />

        <activity android:name=".contact"
            android:label="@string/title_activity_contact"/>

        <activity android:name=".Gallerij"
            android:label="@string/title_activity_gallerij"/>

        <activity android:name=".vluchtplannen"
            android:label="@string/title_activity_vluchtplannen"/>

        <activity android:name=".overview"
            android:label="@string/title_activity_overview"/>

        <activity
            android:name=".privedocumenten"
            android:label="@string/title_activity_privedocumenten"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>